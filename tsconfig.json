{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "outDir": ".",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "compileOnSave": true,
    "filesGlob": [
        "src/**/*.ts",
        "typings/**/*.d.ts"
    ],
    "files": [
        "src/bin/markscript.ts",
        "typings/node/node.d.ts",
        "typings/tsd.d.ts",
        "typings/yargs/yargs.d.ts"
    ],
    "exclude": []
}
